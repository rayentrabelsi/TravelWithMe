                                                            <button class="btn-reply"> <i class="fa fa-thumbs-up" aria-hidden="true"></i></button>
                                                        </form>
                                                        <form method="post" action="{{ path('comment_dislike', {'id': reply.idcomment}) }}">
                                                            <button class="btn-reply"> <i class="fa fa-thumbs-down" aria-hidden="true"></i></button>
                                                        </form>
                                                        {# Bouton signaler #}
                                                        <form method="post" action="{{ path('comment_signaler', {'id': reply.idcomment}) }}">
                                                            <button class="btn-reply"> Signaler </button>
                                                        </form>
                                                        <style>
                                                            /* Styles de base pour le bouton */
                                                            .btn.primary {
                                                                display: inline-block;
                                                                padding: 5px 10px;
                                                                font-size: 14px;
                                                                font-weight: normal;
                                                                text-align: center;
                                                                text-decoration: none;
                                                                border: none;
                                                                border-radius: 5px;
                                                                cursor: pointer;
                                                                margin-top: 20px;
                                                                background-color: #007bff; /* Couleur de fond */
                                                                color: #ffffff; /* Couleur du texte */
