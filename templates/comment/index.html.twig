                    <div class="blog-content">
                        <div class="row">
                            {% for post in posts %}
                            <div class="col-md-4 col-sm-6">
                                <div class="single-blog-item">
                                    <div class="single-blog-item-img">
                                        <img src="/assets/images/blog/{{ post.idPost }}.jpg" alt="blog image">
                                    </div>
                                    <div class="single-blog-item-txt">
                                        <h2><a href="{{ path('app_comment_new', {'postId': post.idPost})  }}">{{ post.title }}</a></h2>
                                        <h4>posted <span>by</span> <a href="#">{{ post.author }}</a> {{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</h4>

                                        <!-- Loop through comments for this post -->
                                        {% for comment in post.comments %}
                                        <meta charset="UTF-8">
                                            <meta name="viewport" content="width=device-width, initial-scale=1.0">
                                            <title>Forum Comment</title>
                                            <style>
                                                .comment {
                                                    border: 1px solid #ccc;
                                                    border-radius: 5px;
                                                    padding: 10px;
                                                    margin-bottom: 20px;
                                                }

                                                .reply {
                                                    border: 1px solid #ccc;
                                                    border-radius: 5px;
                                                    padding: 5px;
                                                    margin-top: 5px; /* Add margin-top to separate replies */
                                                }
                                                .comment-header {
                                                    display: flex;
                                                    align-items: center;
                                                }

                                                .comment-header img {
                                                    width: 50px;
                                                    height: 50px;
                                                    border-radius: 50%;
                                                    margin-right: 10px;
                                                }

                                                .user-info h3 {
                                                    margin: 0;
                                                }

                                                .comment-date {
                                                    color: #777;
                                                    font-size: 12px;
                                                }

                                                .comment-content p {
                                                    margin: 0;
                                                    font-size: 14px;
                                                    line-height: 1.5;
                                                }

                                                .comment-actions {
                                                    display: flex;
                                                }

                                                .comment-actions form {
                                                    margin-right: 5px; /* Adjust margin between forms if needed */
                                                }

                                                .btn-reply,
                                                .btn-like {
                                                    padding: 5px 10px;
                                                    background-color: #007bff;
                                                    color: #fff;
                                                    border: none;
                                                    border-radius: 3px;
                                                    cursor: pointer;
                                                    margin-right: 10px;
                                                }

                                                .btn-reply:hover,
                                                .btn-like:hover {
                                                    background-color: #0056b3;
                                                }
                                            </style>

                                        <div class="comment">
                                            <div class="comment-header">
                                                <img src="/assets/images/blog/pr.jpg" alt="eya boukhzar">
                                                <div class="user-info">
                                                    <h3>{{ comment.AuthorC}}</h3>
                                                    <span class="comment-date">{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</span>
                                                </div>
                                            </div>
                                            <div class="comment-content">
                                                <p>{{ comment.content}}</p>
                                            </div>

                                            <hr class="comment-divider"> <!-- Ligne horizontale -->

                                            <div class="like-dislike-info">
                                                <span class="likes-count">{{ comment.reacts.likes}} likes</span>
                                                <span class="dislikes-count">{{ comment.reacts.dislike}}   dislikes</span>
                                            </div>
                                            <div class="comment-actions">
                                                <form method="post" action="{{ path('comment_like', {'id': comment.idcomment}) }}">
                                                    <button class="btn-reply"> <i class="fa fa-thumbs-up" aria-hidden="true"></i></button>
                                                </form>
                                                <form method="post" action="{{ path('comment_dislike', {'id': comment.idcomment}) }}">
                                                    <button class="btn-reply"> <i class="fa fa-thumbs-down" aria-hidden="true"></i></button>
                                                </form>
                                                {# Bouton signaler #}
                                                <form method="post" action="{{ path('comment_signaler', {'id': comment.idcomment}) }}">
                                                    <button class="btn-reply"> Signaler </button>
                                                </form>

                                                <a href="{{ path('app_comment_reply', {'parentId': comment.idComment}) }}" data-reply data-id="{{ comment.idComment }}"> <button class="btn-reply"> Reply </button></a>
                                        </div>
                                            <div style="margin-bottom: 20px;"></div>
