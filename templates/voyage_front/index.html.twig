{% block body %}
<div class="container">
 <br><br>
   <center> <h1>Voyage index</h1><br><br>

    <table class="table">
        <thead>
            <tr>
                <th>Vehicule</th>
                <th>Utilisateur</th>
                <th>Accomodation</th>
                <th>Evenement</th>
                <th>Depart</th>
                <th>Arrivee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voyage in voyages %}
            <tr>
                <td>{{ voyage.vehicule.TransportModel }}</td>
                <td>{{ voyage.Utilisateur.email }}</td>
                <td>{{ voyage.accomodation.lieu }}</td>
                <td>{{ voyage.evenement.nom}}</td>
                <td>{{ voyage.depart ? voyage.depart|date('Y-m-d') : '' }}</td>
                <td>{{ voyage.arrivee ? voyage.arrivee|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_voyage_front_show', {'id': voyage.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('app_voyage_front_edit', {'id': voyage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_voyage_front_new') }}">Create new</a>
{% endblock %}
