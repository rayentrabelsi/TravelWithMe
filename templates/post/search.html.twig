{% block body %}
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <div class="container">
        <!--header-top start -->
        <header id="header-top" class="header-top">
            <ul>
                <li>
                    <div class="header-top-left">
                        <ul>
                            <li class="select-opt">
                                <select name="language" id="language">
                                    <option value="default">EN</option>
                                    <option value="Bangla">BN</option>
                                    <option value="Arabic">AB</option>
                                </select>
                            </li>
                            <li class="select-opt">
                                <select name="currency" id="currency">
                                    <option value="usd">USD</option>
                                    <option value="euro">Euro</option>
                                    <option value="bdt">BDT</option>
                                </select>
                            </li>

                        </ul>
                    </div>
                </li>
                <li class="head-responsive-right pull-right">
                    <div class="header-top-right">
                        <ul>
                            <li class="header-top-contact">
                                +216 51 223 897
                            </li>
                            <li class="header-top-contact">
                                <a href="{{ path('app_sign_in') }}">sign in</a>
                            </li>
                            <li class="header-top-contact">
                                <a href="{{ path('app_register') }}">register</a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>

        </header><!--/.header-top-->
        <!--header-top end -->
        <h1>Recherche de Posts</h1>

        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.author) }}
        {{ form_end(form) }}

        <a href="{{ path('app_search')}}"> <button class="btn-reply"> Rechercher </button></a>

        {% if posts is not empty %}
            <h2>RÃ©sultats de la recherche :</h2>
            <ul>

                {% for post in posts %}
                    <li>{{ post.title }}</li>
                <div class="single-blog-item-txt">
                    <h4>posted <span>by</span> <a href="#">{{ post.author }}</a> {{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</h4>
                    <!-- Loop through comments for this post -->

                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}



