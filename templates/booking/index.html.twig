{% block body %}
<center>
<div class="container">
  
        <br><br>
    <h1>Booking index</h1>
<br>
    <table class="table">
        <thead>
            <tr>
                <th>ID_User</th>
                <th>ID_Acc</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.user }}</td>
                <td>{{ booking.accomodation }}</td>
                <td>{{ booking.Debut ? booking.Debut|date('Y-m-d') : '' }}</td>
                <td>{{ booking.Fin ? booking.Fin|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_booking_show', {'id': booking.IdBooking}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('app_booking_edit', {'id': booking.IdBooking}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_booking_new') }}">Create new</a>
{% endblock %}
